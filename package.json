{
  "name": "node-express-boilerplate",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/isi-tics/node-express-boilerplate/branches",
  "author": "Carlos Manoel Vasconcelos Sousa <carlos.vasconcelos@sistemafiepe.org.br>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "prod:server": "node /app/dist/shared/server.js",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --exit-child --ignore-watch node_modules src/shared/server.ts",
    "start": "ts-node src/shared/infra/http/server.ts",
    "swagger": "ts-node swagger.ts",
    "test": "vitest",
    "commit": "git-cz",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dayjs": "^1.10.7",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "tsyringe": "^4.6.0",
    "uuidv4": "^6.2.12",
    "winston": "^3.6.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.0",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/i18n": "^0.13.2",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@vitest/coverage-istanbul": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-decorators": "^1.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "prettier": "^2.5.1",
    "prisma": "^4.13.0",
    "standard-version": "^9.3.2",
    "swagger-autogen": "^2.23.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  },
  "prisma": {
    "schema": "./src/shared/infra/prisma/schema.prisma",
    "seed": "ts-node src/shared/infra/prisma/seeds/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
